#!/bin/sh 

echo "Kill Google Chrome"
killall 'Google Chrome'

echo "Kill Firefox"
killall 'firefox'

echo "Kill Mail"
killall "Mail"

echo "Kill Transmission"
killall "Transmission"

echo "Shut down all vagrant machines"
for i in `vagrant global-status --prune | grep running | awk '{print $1}'`; do
    vagrant halt $i
done;
